<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MainFragment">

    <fragment
        android:id="@+id/MainFragment"
        android:name="sp.jmet.simpletodolistandroid.view.fragment.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_MainFragment_to_DetailFragment"
            app:destination="@id/DetailFragment" />
        <action
            android:id="@+id/action_MainFragment_to_CreationFragment"
            app:destination="@id/CreationFragment" />
    </fragment>
    <fragment
        android:id="@+id/DetailFragment"
        android:name="sp.jmet.simpletodolistandroid.view.fragment.DetailFragment"
        android:label="@string/detail_fragment_label"
        tools:layout="@layout/fragment_detail">

        <action
            android:id="@+id/action_DetailFragment_to_MainFragment"
            app:destination="@id/MainFragment" />
    </fragment>
    <fragment
        android:id="@+id/CreationFragment"
        android:name="sp.jmet.simpletodolistandroid.view.fragment.CreationFragment"
        android:label="@string/creation_fragment_label"
        tools:layout="@layout/fragment_creation">

        <action
            android:id="@+id/action_CreationFragment_to_MainFragment"
            app:destination="@id/MainFragment" />

    </fragment>
</navigation>